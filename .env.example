# App
PORT=3500
NODE_ENV=development
API_PREFIX=/api

# Logging (Production optimized)
LOG_LEVEL=log
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=/var/log/tms-middleware
LOG_MAX_FILES=30
LOG_MAX_SIZE=100m

# Database (PostgreSQL)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=password
DATABASE_NAME=tms_db

# JWT
JWT_SECRET=your-middleware-secret
JWT_EXPIRATION=1d
JWT_EXPIRATION_REFRESH=7d

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=password
REDIS_TTL=3600
REDIS_MAX_RETRIES=10
REDIS_RETRY_DELAY=1000

# TCP Microservice Server Config 
MICROSERVICE_TCP_HOST=0.0.0.0
MICROSERVICE_TCP_PORT=3003
